
<div class="question">
	
	<%= @question.text %>
	
		<% @question.options.each do |option| %>
		
		<ul class="nav nav-pills nav-stacked">
			<li><%= link_to option.text, responses_path(option: option.id, correct: params[:correct]), method: :post  %></li>
		</ul> <!-- nav nav-pills nav-stacked -->
	<% end %>
</div> <!-- question -->